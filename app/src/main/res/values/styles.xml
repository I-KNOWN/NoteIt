<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.TextInputLayoutList" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/montserrat_italic</item>
        <item name="hintTextAppearance">@style/TextLabel</item>
        <item name="hintTextColor">@color/grey_500</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxCornerRadiusBottomEnd">100dp</item>
        <item name="boxCornerRadiusBottomStart">100dp</item>
        <item name="boxCornerRadiusTopEnd">100dp</item>
        <item name="boxCornerRadiusTopStart">100dp</item>
    </style>



    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>


    <style name="Note_EditText_parent" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">textMultiLine|textVisiblePassword</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>

    </style>

    <style name="bottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>
    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="background">@drawable/bottom_dialog_background</item>
    </style>

    <style name="MyTransparentBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>
    
    <style name="DialogAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>



</resources>