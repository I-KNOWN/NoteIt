<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/filter_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="30dp"
    android:paddingTop="10dp"
    android:paddingEnd="30dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:background="@color/grey_200" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView7"
        style="@style/TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Text Color"
        android:textAllCaps="true"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider" />


    <TextView
        android:id="@+id/Layout_add_image_gallery"
        style="@style/TEXT3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/upload_btn_border"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:padding="10dp"
        android:text="Gallery"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/Layout_add_image_camera"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/Layout_add_image_camera"
        style="@style/TEXT3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/upload_btn_border"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:padding="10dp"
        android:text="Camera"
        android:textSize="12sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/Layout_add_image_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Layout_add_image_gallery"
        app:layout_constraintTop_toTopOf="@+id/Layout_add_image_gallery" />

    <View
        android:layout_width="10dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/Layout_add_image_gallery"
        tools:layout_editor_absoluteX="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>