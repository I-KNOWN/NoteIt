<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteIt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>

        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>


    </style>

    <style name="SCREEN" >
        <item name="android:background">@color/dark_background</item>
    </style>
    <style name="SCREEN2" >
        <item name="android:background">@color/black</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/white_text</item>
    </style>
    <style name="TEXT2">
        <item name="android:textColor">@color/white_text2</item>
    </style>
    <style name="TEXT3">
        <item name="android:textColor">@color/white_text3</item>
    </style>

    <style name="TEXT4">
        <item name="android:textColor">@color/darkish_stroke</item>
    </style>
    <style name="TEXT5">
        <item name="android:textColor">@color/white_text4</item>
    </style>

    <style name="filer_back">
        <item name="android:background">@drawable/filter_btn_rounded_dark</item>
    </style>

    <style name="filter_icon">
        <item name="android:background">@drawable/filter_light</item>
    </style>
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/grey_700</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/white</item>
    </style>

    <style name="filter_ripple">
        <item name="android:background">@drawable/ripple_effect_rounded_dark</item>
    </style>
    <style name="common_ripple">
        <item name="android:background">@drawable/ripple_effect_rounded_dark</item>
    </style>

    <style name="profile_back">
        <item name="android:backgroundTint">@color/blakish_back</item>
    </style>
    <style name="note_box">
        <item name="android:background">@drawable/border_note_grey_dark</item>
    </style>
    <style name="filter_dialog_bg">
        <item name="android:background">@color/black_500</item>
    </style>
    <style name="no_format_bg">
        <item name="android:background">@drawable/hole_punch_circle_blank_white</item>
        <item name="android:src">@drawable/ic_rounded_plus4</item>
    </style>
    <style name="slider">
        <item name="android:background">@color/grey_400</item>
    </style>
    <style name="option_back">
        <item name="android:background">@drawable/rounded_options_white</item>
    </style>
    <style name="add_note_bg">
        <item name="android:src">@drawable/ic_rounded_plus4_black</item>
    </style>
    <style name="option_bg">
        <item name="android:background">@color/style_back_dark</item>
    </style>
    <style name="option_btn_bg">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="option_btn_bg2">
        <item name="android:background">@color/whiteish_back</item>
        <item name="android:textColor">@color/style_back_dark</item>
    </style>

    <style name="note_title_hint">
        <item name="android:textColorHint">@color/grey_2000</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="note_des_hint">
        <item name="android:textColorHint">@color/grey_1000</item>
        <item name="android:textColor">@color/whiteish_back</item>
        <item name="android:inputType">textMultiLine|textVisiblePassword</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="bk_btn_bg">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bk_btn_arrow">
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="email_btn">
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="login_btn">
        <item name="android:background">@color/grey_100</item>
    </style>

    <style name="login_btn_arrow">
        <item name="android:backgroundTint">@color/darkish_stroke</item>
    </style>
    <style name="input_et" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="fontFamily">@font/montserrat_italic</item>
        <item name="hintTextAppearance">@style/TextLabel</item>
        <item name="hintTextColor">@color/white_text4</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxCornerRadiusBottomEnd">100dp</item>
        <item name="boxCornerRadiusBottomStart">100dp</item>
        <item name="boxCornerRadiusTopEnd">100dp</item>
        <item name="boxCornerRadiusTopStart">100dp</item>
        <item name="boxBackgroundColor">@color/black_700</item>
        <item name="boxStrokeColor">@color/edit_text_box_border_dark</item>

    </style>
    <style name="app_logo">
        <item name="android:src">@drawable/app_logo_dark</item>
    </style>
    <style name="chkbox_tint">
        <item name="android:buttonTint">@color/whiteish_back</item>
    </style>
    <style name="cmaera_capture">
        <item name="android:background">@drawable/rounded_capture_double_circle_dark</item>
    </style>
    <style name="bk_txt">
        <item name="android:textColor">@color/white_300</item>
    </style>
    <style name="bk_arrow">
        <item name="android:backgroundTint">@color/white_300</item>
    </style>
</resources>